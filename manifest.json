{
  "name": "Color Snatcher",
  "description": "A color Picker For Getting colors from your favourite website",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "/images/picker-16.png",
    "32": "/images/picker-32.png",
    "48": "/images/picker-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  }
}
